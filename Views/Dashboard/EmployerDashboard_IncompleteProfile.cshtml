@{
    ViewData["Title"] = "Hoàn tất Hồ sơ Công ty";
    var representativeUserName = ViewBag.RepresentativeUserName as string;
    var representativeUserAvatarUrl = ViewBag.RepresentativeUserAvatarUrl as string;
    var defaultAvatar = "/images/default-avatar.png";
}

<link rel="stylesheet" href="~/css/CandidateDashboard.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- Main completion card with dashboard header style -->
            <div class="dashboard-header text-center">
                <div class="header-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-12 mb-4">
                            @if (!string.IsNullOrEmpty(representativeUserAvatarUrl))
                            {
                                <img src="@representativeUserAvatarUrl" alt="Avatar" class="profile-avatar mx-auto d-block" />
                            }
                            else
                            {
                                <img src="@defaultAvatar" alt="Avatar" class="profile-avatar mx-auto d-block" />
                            }
                        </div>
                        <div class="col-12">
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <i class="fas fa-exclamation-triangle me-3" style="font-size: 2rem; color: var(--bs-warning);"></i>
                                <h1 class="mb-0">Yêu cầu Hoàn tất Hồ sơ</h1>
                            </div>
                            <h5 class="mb-3">Chào <strong>@representativeUserName</strong>,</h5>
                            <p class="lead mb-4">
                                Hồ sơ công ty của bạn chưa được hoàn thiện để có thể sử dụng đầy đủ các tính năng.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Information cards -->
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card stat-card h-100 text-center" style="border-left: 4px solid var(--bs-info);">
                        <div class="card-body">
                            <i class="fas fa-building stat-icon" style="color: var(--bs-info);"></i>
                            <h6 class="card-title">Thông tin Công ty</h6>
                            <p class="card-text small">Cập nhật đầy đủ thông tin về công ty của bạn</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card stat-card h-100 text-center" style="border-left: 4px solid var(--bs-success);">
                        <div class="card-body">
                            <i class="fas fa-briefcase stat-icon" style="color: var(--bs-success);"></i>
                            <h6 class="card-title">Đăng tin Tuyển dụng</h6>
                            <p class="card-text small">Bắt đầu tuyển dụng nhân tài cho công ty</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card stat-card h-100 text-center" style="border-left: 4px solid var(--bs-primary);">
                        <div class="card-body">
                            <i class="fas fa-users stat-icon" style="color: var(--bs-primary);"></i>
                            <h6 class="card-title">Quản lý Ứng viên</h6>
                            <p class="card-text small">Tìm kiếm và quản lý ứng viên phù hợp</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action card -->
            <div class="card shadow-lg">
                <div class="card-body text-center p-4">
                    <div class="mb-4">
                        <i class="fas fa-file-alt" style="font-size: 3rem; color: var(--bs-primary); opacity: 0.8;"></i>
                    </div>
                    <h5 class="card-title mb-3">Hoàn tất hồ sơ để tiếp tục</h5>
                    <p class="card-text mb-4">
                        Để có thể đăng tin tuyển dụng và sử dụng đầy đủ các tính năng của nhà tuyển dụng,
                        vui lòng cập nhật đầy đủ thông tin công ty của bạn.
                    </p>
                    
                    <!-- Quick action buttons similar to dashboard -->
                    <div class="row justify-content-center mb-4">
                        <div class="col-md-8">
                            <div class="d-grid gap-3">
                                <a asp-controller="CompanyProfile" asp-action="CreateOrEdit" 
                                   class="btn btn-primary btn-lg d-flex align-items-center justify-content-center">
                                    <i class="fas fa-file-alt me-3"></i>
                                    <span>Hoàn tất Hồ sơ Công ty ngay</span>
                                </a>
                                
                                <div class="row">
                                    <div class="col-6">
                                        <a href="#" class="btn btn-outline-secondary btn-sm w-100">
                                            <i class="fas fa-question-circle me-2"></i>Hướng dẫn
                                        </a>
                                    </div>
                                    <div class="col-6">
                                        <form asp-controller="TaiKhoan" asp-action="DangXuat" method="post" class="d-inline w-100">
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Progress indicator -->
                    <div class="profile-completion">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">Tiến độ hoàn thiện hồ sơ</small>
                            <small class="text-muted"><strong>0%</strong></small>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 0%" 
                                 aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted d-block mt-2">Hãy hoàn thiện hồ sơ để mở khóa tất cả tính năng</small>
                    </div>
                </div>
            </div>

            <!-- Features preview -->
            <div class="row mt-4">
                <div class="col-12">
                    <h6 class="section-title text-center">
                        <i class="fa-solid fa-star"></i> Tính năng dành cho Nhà tuyển dụng
                    </h6>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card quick-action-card h-100" style="opacity: 0.6; pointer-events: none;">
                        <div class="card-body">
                            <i class="fa-solid fa-plus-circle" style="color: var(--bs-primary);"></i>
                            <h6 class="card-title">Đăng tin Tuyển dụng</h6>
                            <p class="card-text small">Đăng tin tuyển dụng và tiếp cận hàng nghìn ứng viên</p>
                            <small class="text-muted">
                                <i class="fas fa-lock me-1"></i>Cần hoàn thiện hồ sơ
                            </small>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card quick-action-card h-100" style="opacity: 0.6; pointer-events: none;">
                        <div class="card-body">
                            <i class="fa-solid fa-search" style="color: var(--bs-success);"></i>
                            <h6 class="card-title">Tìm kiếm Ứng viên</h6>
                            <p class="card-text small">Chủ động tìm kiếm và liên hệ với ứng viên phù hợp</p>
                            <small class="text-muted">
                                <i class="fas fa-lock me-1"></i>Cần hoàn thiện hồ sơ
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Help section -->
            <div class="card mt-4" style="background-color: var(--color-cream-light); border-left: 4px solid var(--bs-info);">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <i class="fas fa-lightbulb" style="font-size: 2.5rem; color: var(--bs-info);"></i>
                        </div>
                        <div class="col-md-10">
                            <h6 class="card-title mb-2">
                                <i class="fas fa-info-circle me-2"></i>Cần hỗ trợ?
                            </h6>
                            <p class="card-text mb-2">
                                Nếu bạn gặp khó khăn trong việc hoàn thiện hồ sơ công ty, đội ngũ hỗ trợ của chúng tôi luôn sẵn sàng giúp đỡ.
                            </p>
                            <div class="d-flex gap-2">
                                <a href="#" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-phone me-1"></i>Liên hệ hỗ trợ
                                </a>
                                <a href="#" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-book me-1"></i>Hướng dẫn chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Benefits section -->
            <div class="row mt-4">
                <div class="col-12">
                    <h6 class="section-title text-center">
                        <i class="fas fa-trophy"></i> Lợi ích khi hoàn thiện hồ sơ
                    </h6>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card stat-card h-100 text-center" style="border-left: 4px solid var(--bs-success);">
                        <div class="card-body">
                            <i class="fas fa-eye stat-icon" style="color: var(--bs-success);"></i>
                            <h6 class="card-title">Tăng độ tin cậy</h6>
                            <p class="card-text small">Hồ sơ đầy đủ giúp ứng viên tin tưởng hơn</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card stat-card h-100 text-center" style="border-left: 4px solid var(--bs-warning);">
                        <div class="card-body">
                            <i class="fas fa-chart-line stat-icon" style="color: var(--bs-warning);"></i>
                            <h6 class="card-title">Hiệu quả tuyển dụng</h6>
                            <p class="card-text small">Tìm được ứng viên phù hợp nhanh hơn</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card stat-card h-100 text-center" style="border-left: 4px solid var(--bs-info);">
                        <div class="card-body">
                            <i class="fas fa-star stat-icon" style="color: var(--bs-info);"></i>
                            <h6 class="card-title">Ưu tiên hiển thị</h6>
                            <p class="card-text small">Tin tuyển dụng được ưu tiên hiển thị</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick stats -->
            <div class="card mt-4" style="background: linear-gradient(135deg, rgba(var(--bs-primary-rgb), 0.1) 0%, rgba(var(--bs-secondary-rgb), 0.1) 100%);">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="animate-number">
                                <h3 class="mb-1" style="color: var(--bs-primary);">10,000+</h3>
                                <small class="text-muted">Ứng viên đang tìm việc</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="animate-number">
                                <h3 class="mb-1" style="color: var(--bs-success);">500+</h3>
                                <small class="text-muted">Công ty đang tuyển dụng</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="animate-number">
                                <h3 class="mb-1" style="color: var(--bs-warning);">2,000+</h3>
                                <small class="text-muted">Vị trí đang tuyển</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="animate-number">
                                <h3 class="mb-1" style="color: var(--bs-info);">95%</h3>
                                <small class="text-muted">Tỷ lệ hài lòng</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer call to action -->
            <div class="text-center mt-4 mb-5">
                <p class="text-muted">
                    <i class="fas fa-clock me-2"></i>
                    Chỉ mất 5-10 phút để hoàn thiện hồ sơ công ty
                </p>
                <a asp-controller="CompanyProfile" asp-action="CreateOrEdit" 
                   class="btn btn-primary btn-lg">
                    <i class="fas fa-rocket me-2"></i>Bắt đầu ngay
                </a>
            </div>
        </div>
    </div>
</div>