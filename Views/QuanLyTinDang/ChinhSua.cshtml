@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            // Choices.js initialization
            var multiSelectNganhNghe = document.querySelector('.choices-multiple-edit');
            if (typeof Choices !== 'undefined' && multiSelectNganhNghe) {
                new Choices(multiSelectNganhNghe, {
                    removeItemButton: true,
                    placeholder: true,
                    placeholderValue: 'Chọn ngành nghề...',
                    allowHTML: false
                });
            } else if (multiSelectNganhNghe) {
                console.warn('Choices.js library not found or not loaded before this script.');
            }

            // Load Quan Huyen
            function loadQuanHuyenEdit() {
                var thanhPhoId = $('#ThanhPhoId_Edit').val();
                var quanHuyenSelect = $('#QuanHuyenId_Edit');
                var currentQuanHuyenId = '@Model.QuanHuyenId';

                quanHuyenSelect.empty().append($('<option></option>').val('').text('-- Chọn Quận/Huyện --')).prop('disabled', true);

                if (thanhPhoId) {
                    $.ajax({
                        url: '@Url.Action("GetQuanHuyenByThanhPho", "QuanLyTinDang", new { Area = "Admin" })',
                        type: 'GET',
                        data: { thanhPhoId: thanhPhoId },
                        success: function (data) {
                            quanHuyenSelect.prop('disabled', false);
                            $.each(data, function (index, item) {
                                quanHuyenSelect.append($('<option></option>').val(item.id).text(item.ten));
                            });
                            if (currentQuanHuyenId && currentQuanHuyenId != '0') {
                                quanHuyenSelect.val(currentQuanHuyenId);
                            }
                        },
                        error: function () {
                            console.error('Lỗi khi tải danh sách quận huyện.');
                            quanHuyenSelect.prop('disabled', true);
                        }
                    });
                }
            }

            $('#ThanhPhoId_Edit').change(function () {
                $('#QuanHuyenId_Edit').val('');
                loadQuanHuyenEdit();
            });

            if ($('#ThanhPhoId_Edit').val()) {
                loadQuanHuyenEdit();
            }

            // Handle LoaiLuong change
            function handleLoaiLuongChange() {
                var loaiLuongValue = parseInt($('#LoaiLuong_Edit').val());
                var loaiLuongThoaThuanConst = @((int)LoaiLuong.thoathuan);

                if (loaiLuongValue === loaiLuongThoaThuanConst) {
                    $('input[asp-for="LuongToiThieu"]').prop('disabled', true).val('');
                    $('input[asp-for="LuongToiDa"]').prop('disabled', true).val('');
                    $('#LuongThoaThuanText_Edit').show();
                } else {
                    $('input[asp-for="LuongToiThieu"]').prop('disabled', false);
                    $('input[asp-for="LuongToiDa"]').prop('disabled', false);
                    $('#LuongThoaThuanText_Edit').hide();
                }
            }

            $('#LoaiLuong_Edit').change(handleLoaiLuongChange);
            handleLoaiLuongChange();

            // Update status icon color
            $('#TrangThaiTinDang_Edit').change(function() {
                var selectedStatus = parseInt($(this).val());
                var icon = $('#trangThaiIcon');
                icon.removeClass('text-success text-warning text-secondary text-danger text-info text-dark');

                if (selectedStatus === @((int)TrangThaiTinTuyenDung.daduyet)) {
                    icon.addClass('text-success');
                } else if (selectedStatus === @((int)TrangThaiTinTuyenDung.choduyet)) {
                    icon.addClass('text-warning');
                } else if (selectedStatus === @((int)TrangThaiTinTuyenDung.taman)) {
                    icon.addClass('text-secondary');
                } else if (selectedStatus === @((int)TrangThaiTinTuyenDung.hethan)) {
                    icon.addClass('text-danger');
                } else if (selectedStatus === @((int)TrangThaiTinTuyenDung.datuyen)) {
                    icon.addClass('text-info');
                } else if (selectedStatus === @((int)TrangThaiTinTuyenDung.bituchoi)) {
                    icon.addClass('text-dark');
                } else {
                    icon.addClass('text-secondary');
                }
            }).trigger('change');

            // Floating label effect
            $('.floating-label input, .floating-label select, .floating-label textarea').on('focus blur', function() {
                var parent = $(this).parent();
                if ($(this).val() !== '' || $(this).is(':focus')) {
                    parent.addClass('focused');
                } else {
                    parent.removeClass('focused');
                }
            });

            $('.floating-label input, .floating-label select, .floating-label textarea').each(function() {
                if ($(this).val() !== '') {
                    $(this).parent().addClass('focused');
                }
            });

            // Card hover effect
            $('.modern-card').hover(
                function() {
                    $(this).addClass('shadow-lg');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                }
            );

            // Form submit loading effect
            $('form').submit(function() {
                var submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Đang lưu...');
            });
        });
    </script>
}