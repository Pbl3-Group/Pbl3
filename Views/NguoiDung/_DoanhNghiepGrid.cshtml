@model List<HeThongTimViec.ViewModels.NguoiDungDoanhNghiepItem>
@using HeThongTimViec.Extensions
@using HeThongTimViec.Models

<div class="container-fluid">
    @if (Model != null && Model.Any())
    {
        <div class="user-grid">
            @foreach (var user in Model)
            {
                <div class="user-card">
                    <div class="card-header">
                        <div class="avatar-container">
                            <img src="@(user.UrlLogo ?? "/images/default-company.png")" 
                                 alt="Logo" 
                                 class="avatar">
                        </div>
                        <h3 class="user-name" title="@user.TenCongTy">@user.TenCongTy</h3>
                    </div>
                    
                    <div class="user-info">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="info-text" title="@user.Email">@user.Email</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="info-text">@(user.Sdt ?? "N/A")</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div class="info-text">@user.NgayTao.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="status-badge @(user.TrangThaiTk == TrangThaiTaiKhoan.kichhoat ? "status-active" : user.TrangThaiTk == TrangThaiTaiKhoan.choxacminh ? "status-pending" : "status-inactive")">
                            @user.TrangThaiTk.GetDisplayName()
                        </div>
                        
                        <div class="action-buttons">
                            <a asp-controller="NguoiDung" 
                               asp-action="ChiTietDoanhNghiep" 
                               asp-route-id="@user.Id" 
                               class="action-btn btn-view" 
                               title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                            
                            <a asp-controller="NguoiDung" 
                               asp-action="ChinhSuaDoanhNghiep" 
                               asp-route-id="@user.Id" 
                               class="action-btn btn-edit" 
                               title="Chỉnh sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            
                            @if (user.TrangThaiTk == TrangThaiTaiKhoan.kichhoat)
                            {
                                <form asp-controller="NguoiDung" 
                                      asp-action="CapNhatTrangThai" 
                                      asp-route-id="@user.Id" 
                                      asp-route-newStatus="@TrangThaiTaiKhoan.tamdung" 
                                      asp-route-redirectUrl="@(Context.Request.Path + Context.Request.QueryString)" 
                                      method="post" 
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" 
                                            class="action-btn btn-toggle suspend" 
                                            title="Đình chỉ tài khoản" 
                                            onclick="return confirm('Bạn có chắc muốn đình chỉ tài khoản này?');">
                                        <i class="fas fa-user-lock"></i>
                                    </button>
                                </form>
                            }
                            else if (user.TrangThaiTk == TrangThaiTaiKhoan.choxacminh)
                            {
                                <form asp-controller="NguoiDung" 
                                      asp-action="XacMinhDoanhNghiep" 
                                      method="post" 
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" 
                                            class="action-btn btn-toggle" 
                                            title="Xác minh và kích hoạt" 
                                            onclick="return confirm('Bạn có chắc muốn xác minh và kích hoạt tài khoản này?');">
                                        <i class="fas fa-user-check"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-controller="NguoiDung" 
                                      asp-action="CapNhatTrangThai" 
                                      asp-route-id="@user.Id" 
                                      asp-route-newStatus="@TrangThaiTaiKhoan.kichhoat" 
                                      asp-route-redirectUrl="@(Context.Request.Path + Context.Request.QueryString)" 
                                      method="post" 
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" 
                                            class="action-btn btn-toggle" 
                                            title="Kích hoạt tài khoản" 
                                            onclick="return confirm('Bạn có chắc muốn kích hoạt lại tài khoản này?');">
                                        <i class="fas fa-user-check"></i>
                                    </button>
                                </form>
                            }
                            
                            <button type="button" 
                                    class="action-btn btn-delete" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#deleteUserModal-@user.Id" 
                                    title="Xóa doanh nghiệp">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteUserModal-@user.Id" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <form asp-controller="NguoiDung" 
                                  asp-action="Xoa" 
                                  asp-route-id="@user.Id" 
                                  method="post">
                                @Html.AntiForgeryToken()
                                <div class="modal-header">
                                    <h5 class="modal-title">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        Xác nhận xóa
                                    </h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="text-center mb-3">
                                        <i class="fas fa-building text-danger" style="font-size: 3rem;"></i>
                                    </div>
                                    <p class="text-center mb-3">
                                        Bạn có chắc muốn xóa vĩnh viễn doanh nghiệp 
                                        <strong class="text-primary">@user.TenCongTy</strong>?
                                    </p>
                                    <div class="alert alert-danger">
                                        <i class="fas fa-warning me-2"></i>
                                        <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác.
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-modal btn-cancel" data-bs-dismiss="modal">
                                        <i class="fas fa-times me-2"></i>Hủy bỏ
                                    </button>
                                    <button type="submit" class="btn btn-modal btn-confirm">
                                        <i class="fas fa-trash me-2"></i>Xóa vĩnh viễn
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-building"></i>
            </div>
            <h3>Không có doanh nghiệp nào</h3>
            <p>Danh sách doanh nghiệp hiện đang trống.</p>
        </div>
    }
</div>

<style>
    :root {
        --primary-gradient: linear-gradient(90deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%);
        --success-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        --warning-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --danger-gradient: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
        --card-shadow: 0 10px 30px rgba(0,0,0,0.1);
        --hover-shadow: 0 20px 40px rgba(0,0,0,0.15);
        --border-radius: 20px;
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .user-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
        padding: 1rem;
    }

    .user-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        transition: var(--transition);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
    }

    .user-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--primary-gradient);
        transform: scaleX(0);
        transition: var(--transition);
        transform-origin: left;
    }

    .user-card:hover {
        transform: translateY(-10px);
        box-shadow: var(--hover-shadow);
    }

    .user-card:hover::before {
        transform: scaleX(1);
    }

    .card-header {
        padding: 2rem 1.5rem 1rem;
        text-align: center;
        position: relative;
    }

    .avatar-container {
        position: relative;
        display: inline-block;
        margin-bottom: 1rem;
    }

    .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid rgba(255, 255, 255, 0.8);
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        transition: var(--transition);
    }

    .user-card:hover .avatar {
        transform: scale(1.05);
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }

    .user-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #173766, #1866d9);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .user-info {
        padding: 0 1.5rem 1.5rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
        padding: 0.5rem;
        border-radius: 10px;
        background: rgba(0,0,0,0.02);
        transition: var(--transition);
    }

    .info-item:hover {
        background: rgba(0,0,0,0.05);
        transform: translateX(5px);
    }

    .info-icon {
        width: 20px;
        height: 20px;
        margin-right: 0.75rem;
        color: #084298;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-text {
        flex: 1;
        font-size: 0.9rem;
        color: #4a5568;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .card-footer {
        padding: 1.5rem;
        background: rgba(0,0,0,0.02);
        border-top: 1px solid rgba(0,0,0,0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: none;
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-active {
        background: var(--success-gradient);
        color: white;
        box-shadow: 0 4px 15px rgba(17, 153, 142, 0.3);
    }

    .status-pending {
        background: var(--warning-gradient);
        color: white;
        box-shadow: 0 4px 15px rgba(245, 87, 108, 0.3);
    }

    .status-inactive {
        background: var(--danger-gradient);
        color: white;
        box-shadow: 0 4px 15px rgba(255, 154, 158, 0.3);
    }

    .status-badge::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        transition: left 0.5s;
    }

    .status-badge:hover::before {
        left: 100%;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .action-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
        text-decoration: none;
    }

    .action-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255,255,255,0.2);
        transform: scale(0);
        transition: var(--transition);
        border-radius: 50%;
    }

    .action-btn:hover::before {
        transform: scale(1);
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    .btn-view {
        background: linear-gradient(135deg, #112e58 0%, #366bb8 100%);
        color: white;
    }

    .btn-edit {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        color: #8b4513;
    }

    .btn-toggle {
        background: var(--success-gradient);
        color: white;
    }

    .btn-toggle.suspend {
        background: var(--warning-gradient);
    }

    .btn-delete {
        background: var(--danger-gradient);
        color: white;
    }

    .modal-content {
        border-radius: var(--border-radius);
        border: none;
        overflow: hidden;
    }

    .modal-header {
        background: var(--primary-gradient);
        color: white;
        border: none;
    }

    .modal-footer {
        border: none;
        background: rgba(0,0,0,0.02);
    }

    .btn-modal {
        border-radius: 25px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border: none;
        transition: var(--transition);
    }

    .btn-cancel {
        background: #e2e8f0;
        color: #4a5568;
    }

    .btn-confirm {
        background: var(--danger-gradient);
        color: white;
    }

    .btn-modal:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #718096;
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    @@media (max-width: 768px) {
        .user-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
            padding: 0.5rem;
        }

        .user-card {
            margin-bottom: 1rem;
        }

        .action-buttons {
            flex-wrap: wrap;
            gap: 0.25rem;
        }

        .action-btn {
            width: 35px;
            height: 35px;
        }
    }
</style>