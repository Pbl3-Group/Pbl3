@model HeThongTimViec.Models.QuanHuyen
@{
    ViewData["Title"] = "Xác Nhận Xóa Quận/Huyện";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-main-header">
    <h1>@ViewData["Title"]</h1>
    <h3 class="text-warning">Bạn có chắc chắn muốn xóa Quận/Huyện này không?</h3>
</div>

<div class="admin-card">
    <h4>Quận/Huyện: @Model.Ten</h4>
    <p><strong>Thuộc Tỉnh/Thành phố:</strong> @Model.ThanhPho.Ten</p>
    <hr />
    <dl class="row d-none"> @* Can hide this if short on space, info already above *@
        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.Ten)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.ThanhPho)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ThanhPho.Ten)
        </dd>
    </dl>
    
    <form asp-action="QuanHuyen_DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-admin-danger"><i class="fas fa-trash-alt"></i> Xác nhận Xóa</button>
        <a asp-action="QuanHuyen_Index" asp-route-thanhPhoIdFilter="@Model.ThanhPhoId" class="btn btn-admin-secondary"><i class="fas fa-times"></i> Hủy</a>
    </form>
</div>