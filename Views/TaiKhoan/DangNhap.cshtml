@model HeThongTimViec.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout công khai
}

<div class="row justify-content-center mt-5 mb-5">
    <div class="col-md-6 col-lg-5 col-xl-4">
        <div class="card shadow-sm">
            <div class="card-body p-4 p-md-5">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                @* Form đăng nhập truyền thống *@
                <form asp-action="DangNhap" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" autocomplete="current-password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label small"></label>
                        </div>
                        <div>
                             <a asp-action="QuenMatKhau" class="small link-secondary text-decoration-none">Quên mật khẩu?</a>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg">Đăng Nhập</button>
                </form>


                @*
                    LƯU Ý: asp-controller="Account" là giả định.
                    Nếu controller của bạn tên khác (ví dụ: TaiKhoan), hãy thay đổi nó.
                    Action "ExternalLogin" là action sẽ xử lý việc redirect sang Google.
                    Input "provider" với value "Google" sẽ cho action biết bạn muốn đăng nhập bằng Google.
                *@

                <div class="mt-4 text-center">
                    <p class="small mb-0">
                        Chưa có tài khoản?
                        <a asp-action="DangKy" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="link-primary">Đăng ký ngay</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}