@model HeThongTimViec.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout công khai
}

<div class="row justify-content-center mt-5 mb-5">
    <div class="col-md-6 col-lg-5 col-xl-4">
        <div class="card shadow-sm">
            <div class="card-body p-4 p-md-5">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                
                @* Hiển thị email của tài khoản đang được thay đổi *@
                <p class="text-center text-muted small mb-4">
                    Vui lòng nhập mật khẩu mới cho tài khoản:<br>
                    <strong>@Model.Email</strong>
                </p>

                <form asp-action="DatLaiMatKhau" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    @* Trường ẩn để gửi lại Email cùng với form *@
                    <input type="hidden" asp-for="Email" />

                    @* Trường nhập Mật khẩu mới *@
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Mật khẩu mới" autocomplete="new-password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    @* Trường nhập Xác nhận mật khẩu *@
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" autocomplete="new-password" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg">Lưu Mật Khẩu Mới</button>
                </form>

                <div class="mt-4 text-center">
                    <p class="small mb-0">
                        <a asp-action="DangNhap" class="link-secondary text-decoration-none">Quay lại Đăng nhập</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}