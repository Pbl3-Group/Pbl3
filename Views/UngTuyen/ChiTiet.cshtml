@model HeThongTimViec.ViewModels.UngTuyen.ChiTietUngTuyenViewModel
@using HeThongTimViec.Extensions
@{
    ViewData["Title"] = "Chi tiết đơn ứng tuyển";

}


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .page-header {
            background-color: #f8f9fa;
            padding: 2rem;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
        }
        .detail-card {
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
        }
        .detail-card-header {
            background-color: #f8f9fa;
            font-weight: 600;
            padding: 0.75rem 1.25rem;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .info-label {
            font-weight: 500;
            color: #6c757d;
        }
        .cover-letter {
            white-space: pre-wrap;
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 0.375rem;
            border: 1px solid #e9ecef;
            line-height: 1.7;
        }
        .profile-avatar {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 50%;
        }
    </style>


<div class="container my-5">
    <!-- Header của trang -->
    <div class="page-header text-center">
        <h1 class="h3">Chi tiết đơn ứng tuyển</h1>
        <p class="lead text-muted mb-0">
            cho vị trí <a asp-controller="TimViec" asp-action="ChiTiet" asp-route-id="@Model.TinTuyenDungId" class="fw-bold">@Model.TieuDeTinTuyenDung</a>
        </p>
    </div>

    @if (TempData["SuccessMessage"] != null) {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row g-4">
        <!-- Cột trái: Thông tin ứng viên và Đơn ứng tuyển -->
        <div class="col-lg-8">
            <!-- Thông tin ứng viên -->
            <div class="card detail-card">
                <div class="card-header detail-card-header"><i class="fas fa-user-circle"></i>Thông tin ứng viên</div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <img src="@(string.IsNullOrEmpty(Model.AvatarUngVien) ? "/images/default-avatar.png" : Model.AvatarUngVien)" alt="Avatar" class="profile-avatar me-3" />
                        <div>
                            <h5 class="mb-0">@Model.HoTenUngVien</h5>
                            <p class="mb-1 text-muted">@Model.EmailUngVien</p>
                            <p class="mb-0 text-muted">@Model.SdtUngVien</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nội dung đơn ứng tuyển -->
            <div class="card detail-card">
                <div class="card-header detail-card-header"><i class="fas fa-file-alt"></i>Nội dung đơn ứng tuyển</div>
                <div class="card-body">
                    <p><span class="info-label">Ngày nộp:</span> @Model.NgayNop</p>
                    <p><span class="info-label">Trạng thái:</span> <span class="badge bg-primary">@Model.TrangThai.GetDisplayName()</span></p>
                    
                    <div class="mt-3">
                        <p class="info-label">Thư giới thiệu:</p>
                        <div class="cover-letter">
                            @(!string.IsNullOrEmpty(Model.ThuGioiThieu) ? Model.ThuGioiThieu : "Không có thư giới thiệu.")
                        </div>
                    </div>

                    <div class="mt-4">
                        <p class="info-label">CV đã nộp:</p>
                        @if (!string.IsNullOrEmpty(Model.UrlCvDaNop))
                        {
                            <a href="@Url.Content(Model.UrlCvDaNop)" class="btn btn-outline-primary" target="_blank">
                                <i class="fas fa-download me-2"></i>Xem/Tải CV
                            </a>
                        }
                        else
                        {
                            <p class="text-muted">Ứng viên không nộp CV (có thể ứng tuyển bằng hồ sơ trực tuyến).</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột phải: Thông tin nhà tuyển dụng và Hành động -->
        <div class="col-lg-4">
            <div class="card detail-card">
                <div class="card-header detail-card-header"><i class="fas fa-building"></i>Thông tin Nhà tuyển dụng</div>
                <div class="card-body text-center">
                    <img src="@(string.IsNullOrEmpty(Model.LogoNhaTuyenDung) ? "/images/company-logo-placeholder.png" : Model.LogoNhaTuyenDung)" alt="Logo" class="profile-avatar mb-2" />
                    <h5 class="mb-1">@Model.TenNhaTuyenDung</h5>
                   <!-- DÒNG MỚI ĐÃ SỬA LỖI -->
                  <a asp-controller="CongTy" asp-action="ChiTiet" asp-route-slug="@Model.SlugNhaTuyenDung" class="btn btn-sm btn-link">Xem trang công ty</a>
                </div>
            </div>

            @* CHỈ HIỂN THỊ CÁC NÚT HÀNH ĐỘNG NẾU LÀ NTD *@
            @if(Model.CanViewAsNtd)
            {
                <div class="card detail-card">
                    <div class="card-header detail-card-header"><i class="fas fa-tasks"></i>Hành động</div>
                    <div class="card-body">
                        <p class="small text-muted">Thay đổi trạng thái của đơn ứng tuyển này:</p>
                        <div class="d-grid gap-2">
                             <button class="btn btn-success"><i class="fas fa-check me-2"></i>Duyệt hồ sơ</button>
                             <button class="btn btn-danger"><i class="fas fa-times me-2"></i>Từ chối hồ sơ</button>
                             @* Các nút khác như "Liên hệ", "Phỏng vấn"... *@
                        </div>
                    </div>
                </div>
            }

             @* CHỈ HIỂN THỊ CÁC NÚT HÀNH ĐỘNG NẾU LÀ ỨNG VIÊN *@
            @if(Model.CanViewAsUngVien)
            {
                <div class="card detail-card">
                    <div class="card-header detail-card-header"><i class="fas fa-user-edit"></i>Hành động của bạn</div>
                    <div class="card-body">
                        <div class="d-grid">
                            <button class="btn btn-outline-danger"><i class="fas fa-trash-alt me-2"></i>Rút đơn ứng tuyển</button>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>